<resources>
    <!-- Base application theme. -->
    <style name="Theme.Appasyncrv" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonText" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:layout_width">80.0dp</item>
        <item name="android:layout_height">40.0dp</item>
    </style>

    <style name="RecyclerView" parent="Widget.AppCompat.ListView">
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Theme.Appasyncrv.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>